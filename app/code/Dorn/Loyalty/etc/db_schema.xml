<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order_coins_transaction" resource="default" engine="innodb" comment="">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true"/>
        <column xsi:type="int" name="order_id" unsigned="true" nullable="false" identity="false"/>
        <column xsi:type="boolean" name="added_by_admin" nullable="false" default="0"/>
        <column xsi:type="decimal" name="coins_received" unsigned="true" nullable="true" default="0"/>
        <column xsi:type="decimal" name="coins_spend" unsigned="true" nullable="true" default="0"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="SALES_ORDER_COINS_TRANSACTION_ID_SALES_ORDER_ENTITY_ID"
                    table="sales_order_coins_transaction" column="order_id" referenceTable="sales_order"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <index referenceId="SALES_ORDER_COINS_TRANSACTION_ID" indexType="btree">
            <column name="id"/>
        </index>
    </table>
</schema>
